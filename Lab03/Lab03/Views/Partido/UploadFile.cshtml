@{
    ViewBag.Title = "Cargar Archivo";
}

<body background="~/Content/River.jpg">
</body>

<h1><font color="#FFFFFF">Subir Archivo</font></h1>

<br />

@using (Html.BeginForm("UploadFile", "Partido", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary();

    <br />
    <div class="row">
        <div class="col-md-12">
            <h2 align="center"><font color="#FFFFFF">Agregar con Archivo</font></h2>

            <br />

            <div class="col-md-12" align="center" id="contenedor">
                <h4><font color="#FFFFFF">Seleccione la Primary Key del Árbol</font></h4>
                <form method="get" action="@Url.Action("Index", "Partido")">
                    <label for="Cambiar"><font color="#FFFFFF">Agregar Por:</font></label>
                    <select name="Tipo" id="Tipo">
                        <option value="1">Número de Partido</option>
                        <option value="2">Fecha del Partido</option>
                    </select>
                </form>
            </div>

            <br />

            <h4 align="center">
                <font color="#FFFFFF">Para agregar un grupo de personas a través de un archivo .json</font>
            </h4>

            <div align="center" class="form-group">
                <input type="file" name="file" value="Examinar" class="btn-default" style="color:transparent" />
            </div>
            <div align="center" class="form-group">
                <button type="submit" class="btn btn-default">Subir archivo</button>
            </div>

        </div>
    </div>
}
